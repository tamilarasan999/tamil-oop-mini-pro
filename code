import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class HospitalBillingSystem extends JFrame implements ActionListener {
    private JTextField patientNameField, treatmentField, costField, daysField, totalField;
    private JButton calculateBtn, clearBtn, exitBtn;

    public HospitalBillingSystem() {
        // Frame settings
        setTitle("Hospital Billing System");
        setSize(500, 400);
        setLayout(new GridLayout(7, 2, 10, 10));
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        // Labels and text fields
        add(new JLabel("Patient Name:"));
        patientNameField = new JTextField();
        add(patientNameField);

        add(new JLabel("Treatment:"));
        treatmentField = new JTextField();
        add(treatmentField);

        add(new JLabel("Cost per Day (₹):"));
        costField = new JTextField();
        add(costField);

        add(new JLabel("Number of Days:"));
        daysField = new JTextField();
        add(daysField);

        add(new JLabel("Total Bill (₹):"));
        totalField = new JTextField();
        totalField.setEditable(false);
        add(totalField);

        // Buttons
        calculateBtn = new JButton("Calculate Bill");
        calculateBtn.addActionListener(this);
        add(calculateBtn);

        clearBtn = new JButton("Clear");
        clearBtn.addActionListener(this);
        add(clearBtn);

        exitBtn = new JButton("Exit");
        exitBtn.addActionListener(this);
        add(exitBtn);

        // Styling
        Font f = new Font("Times New Roman", Font.PLAIN, 16);
        for (Component c : getContentPane().getComponents()) {
            c.setFont(f);
        }

        setVisible(true);
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        if (e.getSource() == calculateBtn) {
            try {
                double cost = Double.parseDouble(costField.getText());
                int days = Integer.parseInt(daysField.getText());
                double total = cost * days;
                totalField.setText(String.format("%.2f", total));
            } catch (NumberFormatException ex) {
                JOptionPane.showMessageDialog(this, "Please enter valid numeric values!");
            }
        } else if (e.getSource() == clearBtn) {
            patientNameField.setText("");
            treatmentField.setText("");
            costField.setText("");
            daysField.setText("");
            totalField.setText("");
        } else if (e.getSource() == exitBtn) {
            System.exit(0);
        }
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(HospitalBillingSystem::new);
    }
}
